# Window colors
#                               border         background       text       indicator
client.focused                  $color12       $color12         $fg        $color12
client.unfocused                $bg            $bg              $fg        $bg
client.focused_inactive         $color12       $color12         $fg        $color12
client.urgent                   $color9        $color9          $fg        $color9

